@model SPM.Models.MeasuresDefaultsViewModel

<div id="ped-delay-options" role="tablist" aria-multiselectable="true" class="card mr-4 ml-4">
    <div class="card-header" role="tab">
        <a onclick="rotate(this)" data-toggle="collapse" data-parent="#ped-delay-options" href="#ped-delay-options-collapse" aria-expanded="false" aria-controls="ped-delay-optionsCollapse">
